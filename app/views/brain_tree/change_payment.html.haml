#wrapper
  %section
    .row
      .small-12.column
        Your next billing date is #{next_billing_date(current_user.braintree_subscription.next_billing_date)}.
    .row
      .small-12.column
        Auto Recharge
    .row
      .small-12.column
        You will be charged 40 USD on this card #{@payment_method}.
    .row
      .small-12.column
        = form_tag update_payment_path do
          #dropin
          = submit_tag 'Confirmg Change of Payment Method', class: 'btn'

- content_for :javascript do
  = javascript_include_tag "https://js.braintreegateway.com/v2/braintree.js"
  :javascript
    var client_token = "#{@client_token}";
    braintree.setup(
      client_token,
      'dropin', {
        container: 'dropin'
      });