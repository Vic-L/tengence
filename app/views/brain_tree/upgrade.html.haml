#wrapper
  / start contacts section
  %section#contacts
    .row
      .medium-3.small-12.columns.animated{"data-animate" => "fadeInDown", "data-animate-delay" => "0"}
        .title-section
          %h3 Contacts
      .medium-9.columns.animated{"data-animate" => "fadeInUp", "data-animate-delay" => "0"}
        .section-desc
          %h4 Meet our creative people
          %p Despite recent advances in web type technology weâ€™re still fairly limited when it comes to creative typography layouts, meaning image replacement techniques are still common.
      .medium-6.columns.medium-centered
        / start link-box
        %ul.medium-block-grid-3.small-block-grid-1
          / start link-box item
          %li.link-box
            .about
              %i.icon.tyger-map-pin-streamline
              %p 18 Short Street, 9C
              %p Los Angeles, LA 10013
          / end link-box item
          / start link-box item
          %li.link-box
            .about
              %i.icon.tyger-iphone-streamline
              %p +24 524 235681
              %p +24 568 548236
          / end link-box item
          / start link-box item
          %li.link-box
            .about
              %i.icon.tyger-email-mail-streamline
              %p info@tyger.com
              %p support@tyger.com
          / end link-box item
        / end link-box
    .row
      / start contact form
      #message
      = form_tag checkout_path, id: 'contactform' do |f|
        .large-6.columns.large-centered
          %a#select-payment Select Payment Method
        .large-6.columns.large-centered
          #payment-form
        .large-12.columns.text-center
          %button#submit{:name => "email", :type => "submit"} SEND
      / end contact form
  / end contacts section

