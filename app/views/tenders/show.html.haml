#wrapper
  .row#content
    .small-8.column.main
      
      - if !@tender.in_house?

        .row
          .small-12.column
            .header Reference No
          .small-12.column
            = @tender.ref_no_for_display
        .row
          .small-12.column
            .header Buyer Company Name
          .small-12.column
            = @tender.buyer_company_name
      .row
        .small-12.column
          .header Description
        .small-12.column
          = simple_format @tender.description, {}, wrapper_tag: 'div', sanitize: false
      .row
        .small-12.column
          .header Published Date
        .small-12.column
          = "#{@tender.published_date.day.ordinalize} #{@tender.published_date.strftime('%b %Y')}"
      .row
        .small-12.column
          .header Closing Date
        .small-12.column
          = "#{@tender.closing_datetime.day.ordinalize} #{@tender.closing_datetime.strftime('%b %Y')}"
      .row
        .small-12.column
          .header Closing Time
        .small-12.column
          = @tender.closing_datetime.strftime('%H:%M %p')
      
      - if @tender.in_house?

        .row
          .small-12.column
            .header Full Description
          .small-12.column
            = simple_format @tender.long_description, {}, wrapper_tag: 'div', sanitize: false
        .row
          .small-12.column
            .header Budget
          .small-12.column
            = @tender.budget
      
      - else

        .row
          .small-12.column
            .header Original Link
          .small-12.column
            - if tender.is_gebiz?
              Step 1) Click this <a href='https://www.gebiz.gov.sg/scripts/main.do?sourceLocation=openarea&select=tenderId' class='external-link ga-tenders' target='_blank' data-gtm-category='' data-gtm-action='gebiz step 1' data-gtm-label="#{@tender.ref_no}">link</a> to open up an instance with GeBiz. You only have to do this once per session.
              %br
              Step 2) Click this <a href='#{@tender.external_link}' class='external-link ga-tenders' target='_blank' id='ga-tender-gebiz-link' data-gtm-category='' data-gtm-action='outbound link' data-gtm-label="#{@tender.ref_no}">link</a> to view this tender on Gebiz.
            - else
              = link_to tender.external_link, tender.external_link, target: '_blank',class: 'ga-tenders', data: {gtm_category: '', gtm_action: 'outbound link', gtm_label: tender.ref_no}
      
      - unless @tender.documents.blank?
        
        .row
          .small-12.column
            .header Documents
          - @tender.documents.each do |doc|
            .small-12.column
              = link_to "#{doc.upload.original_filename} (#{number_to_human_size(doc.upload.size)})", doc.upload.url, target: '_blank'

    .small-4.column
      - if !@tender.in_house?
        .row
          .small-12.column
            .header Buyer Name
          .small-12.column
            = @tender.buyer_name
        .row
          .small-12.column
            .header Buyer Contact Number
          .small-12.column
            = @tender.buyer_contact_number
        .row
          .small-12.column
            .header Buyer Email
          .small-12.column
            = @tender.buyer_email
      - else
        .row
          .small-12.column
            .header#reveal-tender-text Click <a id='ga-tender-inhouse-more' class='ga-tenders' data-gtm-category='' data-gtm-action='inhouse details' data-gtm-label='#{@tender.ref_no}'>here</a> to show details
        #in-house-tender-details
          .row
            .small-12.column
              .header Buyer Company
            .small-12.column
              = @tender.buyer_company_name
          .row
            .small-12.column
              .header Buyer Name
            .small-12.column
              = @tender.buyer_name
          .row
            .small-12.column
              .header Buyer Contact Number
            .small-12.column
              = @tender.buyer_contact_number
          .row
            .small-12.column
              .header Buyer Email
            .small-12.column
              = @tender.buyer_email

- content_for :javascript do
  :javascript
    $(function(){
      $('#ga-tender-inhouse-more').click(function(){
        $('#in-house-tender-details').show();
        $('#reveal-tender-text').hide();
        $.ajax({
          url: "#{viewed_tenders_path}",
          data: {
            ref_no: "#{@tender.ref_no}"
          },
          method: "POST"
        });
      });
    });