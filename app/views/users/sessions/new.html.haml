#wrapper
  / start contacts section
  %section#contacts
    .row
      .medium-3.small-12.columns.medium-centered.animated{"data-animate" => "fadeInDown", "data-animate-delay" => "0"}
        .title-section
          %h3 Login
      -# .medium-9.columns.animated{"data-animate" => "fadeInUp", "data-animate-delay" => "0"}
      -#   .section-desc
      -#     %h4 Meet our creative people
      -#     %p Despite recent advances in web type technology we’re still fairly limited when it comes to creative typography layouts, meaning image replacement techniques are still common.
    .row
      / start contact form
      = form_for(resource, as: resource_name, url: session_path(resource_name), id: 'contactform') do |f|
        #message= devise_error_messages!
        .large-6.column.large-centered
          = f.email_field :email, placeholder: 'Email'
        .large-6.column.large-centered
          = f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum)"
        .large-12.columns.text-center
          %button#submit{:name => "email", :type => "submit"} Login
        .large-12.columns.text-center
          = render "users/shared/links"
      / end contact form
  / end contacts section
  / start footer
  %footer
    .row
      .medium-12.text-center.columns
        %h1.logo
          %a{:href => "index.html", :title => ""} Tyger
        .medium-4.columns.medium-centered
          %ul.medium-block-grid-5.small-block-grid-5.social-links
            %li
              %a{:href => "#", :title => ""}
                %i.icon.tyger-skype
            %li
              %a{:href => "#", :title => ""}
                %i.icon.tyger-twitter
            %li
              %a{:href => "#", :title => ""}
                %i.icon.tyger-facebook
            %li
              %a{:href => "#", :title => ""}
                %i.icon.tyger-google-plus
            %li
              %a{:href => "#", :title => ""}
                %i.icon.tyger-pinterest
        %p.white 2014 © Mordorthemes. All rights reserved.
  / end footer
/ end #wrapper
