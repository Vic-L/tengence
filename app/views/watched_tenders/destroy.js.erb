$("#watch-tender-<%= @tender_ref_no.gsub('/','\\\\\\/') %>").empty();
$("#watch-tender-<%= @tender_ref_no.gsub('/','\\\\\\/') %>").append("<%= j link_to 'Watch', watched_tenders_path(ref_no: @tender_ref_no), method: 'post', remote: true, class: 'button watch-button' %>");
$("#watch-tender-<%= @tender_ref_no.gsub('/','\\\\\\/') %>").notify(
  "Successfully removed from watchlist", "success", 
  { position: "top", autoHideDelay: 3000}
);
$('html,body').removeClass('loading');