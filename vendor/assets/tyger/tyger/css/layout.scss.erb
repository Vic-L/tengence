/* ==============================================
Preload
=============================================== */
.mask {
	background-color: #FFF;
	width: 100%;
	height: 100%;
	position: fixed;
	z-index: 100000;
}

#loader {
	background: url("https://<%= ENV['CDN_HOST'] %>/static_assets/home/ajax-loader.gif") center center no-repeat;
	height: 20px;
	width: 20px;
	left: 50%;
	top: 50%;
	position: absolute;
	z-index: 100001;
	margin: -10px 0 0 -10px;
}





/* ==============================================
Generic Styles
=============================================== */
section {
	padding: 150px 0 90px 0px;
}

section.dark {
	background: $color-black;
	// padding: 50px 0px;
	position:relative;
	z-index:10;
}

section#slider-banner {
	height: 400px;
	padding: 0px;
}

footer {
